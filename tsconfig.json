{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",

    "target": "es2022",
    "lib": ["ES2022", "DOM"],

    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "incremental": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.css"],
  "exclude": ["node_modules", "dist"]
}
